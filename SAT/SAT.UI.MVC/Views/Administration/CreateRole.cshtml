@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create a Role";
}
<div class="container mt-5">
    <h1 class="mb-5">@ViewData["Title"]</h1>

<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-1 col-form-label" style="font-size: 2em; font-weight:600">Role:</label>
        <div class="col-sm-6 mt-3">
            <input asp-for="RoleName" class="form-control" placeholder="Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary mt-3 mb-3" style="width:auto">
                Create Role
            </button>
        </div>
    </div>
</form>
</div>
